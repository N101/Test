   <children>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <center>
            <Button fx:id="btnButton" mnemonicParsing="false" onAction="#HandleActionButton" text="Increment" BorderPane.alignment="CENTER" />
         </center>
         <top>
            <Label fx:id="lblLable" alignment="CENTER" prefHeight="19.0" prefWidth="74.0" textAlignment="CENTER" BorderPane.alignment="CENTER">
